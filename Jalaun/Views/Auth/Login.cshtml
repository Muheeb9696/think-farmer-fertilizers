@model DAL.ModelDTO.LoginDTO
@{
    ViewData["Title"] = "District Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          crossorigin="anonymous" />

    <style>
        body {
            margin: 0;
            min-height: 100vh;
            font-family: "Segoe UI", Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            /* Purple SVG Pattern Background */
            background-color: #b085f1;
            background-image: url("data:image/svg+xml,%3Csvg width='48' height='64' viewBox='0 0 48 64' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M48 28v-4L36 12 24 24 12 12 0 24v4l4 4-4 4v4l12 12 12-12 12 12 12-12v-4l-4-4 4-4zM8 32l-6-6 10-10 10 10-6 6 6 6-10 10L2 38l6-6zm12 0l4-4 4 4-4 4-4-4zm12 0l-6-6 10-10 10 10-6 6 6 6-10 10-10-10 6-6zM0 16L10 6 4 0h4l4 4 4-4h4l-6 6 10 10L34 6l-6-6h4l4 4 4-4h4l-6 6 10 10v4L36 8 24 20 12 8 0 20v-4zm0 32l10 10-6 6h4l4-4 4 4h4l-6-6 10-10 10 10-6 6h4l4-4 4 4h4l-6-6 10-10v-4L36 56 24 44 12 56 0 44v4z' fill='%233f2b96' fill-opacity='0.35' fill-rule='evenodd'/%3E%3C/svg%3E");
            background-repeat: repeat;
        }

        .login-wrapper {
            width: 380px;
            background: #ffffff;
            border-radius: 6px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
            overflow: hidden;
        }

        .login-header {
            background: #3f2b96;
            color: #fff;
            padding: 15px;
            text-align: center;
        }

            .login-header h4 {
                margin: 0;
                font-size: 18px;
                font-weight: 600;
            }

            .login-header small {
                font-size: 13px;
                opacity: 0.9;
            }

        .login-body {
            padding: 25px;
        }

        label {
            font-weight: 600;
            font-size: 14px;
        }

        .form-control {
            border-radius: 4px;
            font-size: 14px;
        }

        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 38px;
            cursor: pointer;
            color: #3f2b96;
        }

        .btn-login {
            background: #3f2b96;
            color: #fff;
            width: 100%;
            border-radius: 4px;
            font-weight: 600;
        }

            .btn-login:hover {
                background: #2c1f73;
            }

        .captcha-row img {
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .footer-text {
            text-align: center;
            font-size: 12px;
            margin-top: 12px;
            color: #555;
        }
    </style>
</head>
<body>

    <div class="login-wrapper">

        <!-- Header -->
        <div class="login-header">
            <h4>Login Portal</h4>
            <small>Government of Utter Pradesh</small>
        </div>

        <!-- Body -->
        <div class="login-body">

            <form asp-action="Login" asp-controller="Auth" method="post" asp-antiforgery="true">

                <!-- Mobile -->
                <div class="mb-3">
                    <label asp-for="Mobile">Registered Mobile No.</label>
                    <input asp-for="Mobile" class="form-control"
                           placeholder="Enter Mobile Number" required />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3 password-wrapper">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" id="password"
                           class="form-control" placeholder="Enter Password" required />
                    <i class="fa-solid fa-eye toggle-password"
                       id="toggleIcon" onclick="togglePassword()"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Captcha -->
                <div class="row captcha-row align-items-center mb-2">
                    <div class="col-4">
                        <img id="img-captcha" asp-for="@Model.CaptchaImg" src="@Model.CaptchaImg" width="100" height="36" />
                    </div>
                    <div class="col-8">
                        <div class="input-group">
                            <input asp-for="@Model.CaptchaCode" class="form-control"
                                   placeholder="Captcha Code" maxlength="5" />
                            <button type="button" class="btn btn-secondary"
                                    onclick="RefCaptchafn(this,event)">
                                <i class="fa-solid fa-rotate-right"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <span asp-validation-for="@Model.CaptchaCode" class="text-danger"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Login Button -->
                <button type="submit" class="btn btn-login mt-3">
                    <i class="fa-solid fa-right-to-bracket"></i> Login
                </button>

            </form>

            <div class="footer-text">
                © Jalaun Administration 
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <script>
        function togglePassword() {
            const pwd = document.getElementById("password");
            const icon = document.getElementById("toggleIcon");

            if (pwd.type === "password") {
                pwd.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                pwd.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }

        function RefCaptchafn(btn, event) {
            $.ajax({
                type: "GET",
                url: '@Url.Content("~/Auth/GetCaptchaImageRefresh")',
                success: function (data) {
                    $("#img-captcha").attr("src", data);               
                }
            });
        }
    </script>

</body>
</html>
